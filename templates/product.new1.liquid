<div class="product">
    <div class="page-width">
        <h2> {{ product.title }} </h2>
        <p> {{product.description}} </p>
        {% for image in product.images %}
            <img src="{{image | img_url: 'medium'}}" alt="product-image"> <br>
        {% endfor %}
        {{ product.price | money }} <br>
        {{ product.price | money_without_currency }} <br>
        {{ product.handle }} <br>
        {{ product.url }}
    </div>
</div>